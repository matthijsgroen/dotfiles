[user]
  name = Matthijs Groen
  email = matthijs.groen@gmail.com
[push]
  default = current
[core]
  editor = vim

[color]
  diff = auto
  branch = auto
  status = auto

[alias]
  track = "!f(){ branch=$(git name-rev --name-only HEAD); cmd=\"git branch --set-upstream $branch ${1:-origin}/${2:-$branch}\"; echo $cmd; $cmd; }; f"
  releasenotes = "!git log ${1}.. --pretty=format:'%h - %Cgreen%ad%Creset - %an: %C(bold white)%s%Creset' --grep=pivotal --date=short"

