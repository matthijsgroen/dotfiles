alias be='bundle exec'
alias br='be rake'
alias cu='cucumber 2> /dev/null'
alias wip='cucumber -r features -p wip 2> /dev/null'
alias sp='bundle exec rspec'
alias p='bundle exec pt'

alias r='rails'
alias r2g='be ruby script/generate'
alias r2s='be ruby script/server'

alias ra='source ~/.aliasses'
alias :q=exit

# http://robots.thoughtbot.com/post/15346721484/use-bundlers-binstubs
alias bi="bundle install --binstubs=.bin --path vendor/bundle"
export PATH="./.bin:$PATH"
#export PATH="./script:$PATH" # for rails script that already run bundler setup

alias cmapa='git commit --amend --author="Matthijs en Patrick <matthijs+patrick@kabisa.nl>"'

